{
  "manifest_version": 3,
  "name": "AI Image Detector",
  "version": "1.0.0",
  "description": "Detects AI-generated images using Gemini and Hugging Face models.",
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
